    <!--Tyd-->

    <LinearLayout
        android:id="@+id/aiwin_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/freeme_aiwinn_hint_bottom"
        android:paddingTop="@dimen/freeme_aiwinn_hint_bottom"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/album_background"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="@dimen/text_size_body_2_freeme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aiwin_hint_title"/>
    </LinearLayout>
</RelativeLayout>
